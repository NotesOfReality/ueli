{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "lib": ["dom", "ESNext"],
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "jsx": "react"
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules/**/*"]
}
